<!-- cart.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>My E-commerce Store - Cart</title>
  <style>
    /* Add your CSS styles here */
  </style>
</head>
<body>
  <h1>Shopping Cart</h1>
  
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% cartItems.forEach(function(item) { %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.quantity %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
